@model OnlineExaminationSystem.Models.ContactUs
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}
<style>
    .alert {
        font-size: 1.4rem;
        text-align: center !important;
    }
</style>
<main>
    <div class="container">

        <section class="page-header">

            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success" role="alert">
                    <strong>Thank you for contacting us!</strong>
                    <br />
                    We'll get back to you in 1-2 business days.
                </div>
            }
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <strong>An error occured!</strong>
                    <br />
                    Kindly try again later.
                </div>
            }
            <h2>Tell us about yourself</h2>
            <h5>Whether you have questions or you would just like to say hello, contact us.</h5>
        </section>
        <div class="row mb-5">
            <div class="col-3">
                <div class="contact-helper">
                    <i class="fas fa-envelope fa-2x"></i>
                    <h3>Email</h3>
                    <p>@AppInfo.OwnerEmail</p>
                </div>
            </div>
            <div class="col-3">
                <div class="contact-helper">
                    <i class="fas fa-phone fa-2x "></i>
                    <h3>Mobile</h3>
                    <p>@AppInfo.OwnerMobile</p>
                </div>
            </div>
            <div class="col-6">
                <div class="contact-helper">
                    <i class="fas fa-location-arrow fa-2x "></i>
                    <h3>Address</h3>
                    <p>@Html.Raw(AppInfo.OwnerAddress)</p>
                </div>
            </div>
        </div>
        <section class="contact-form-wrapper">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="name">YOUR NAME <sup>*</sup></label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your name" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "error" })
                    </div>
                    <div class="form-group col-md-6">
                        <label for="email">YOUR EMAIL ADDRESS <sup>*</sup></label>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your email" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "error" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="subject">SUBJECT <sup>*</sup></label>
                        @Html.EditorFor(model => model.Sub, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter subject" } })
                        @Html.ValidationMessageFor(model => model.Sub, "", new { @class = "error" })
                    </div>
                    <div class="form-group col-md-6">
                        <label for="phone">YOUR PHONE NUMBER <sup>*</sup></label>
                        @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your phone number" } })
                        @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "error" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-12">
                        <label for="message">HOW CAN WE HELP YOU? <sup>*</sup></label>
                        @Html.TextAreaFor(model => model.Message, new { @class = "form-control", @placeholder = "Enter your query....", @rows = "5" })
                        @Html.ValidationMessageFor(model => model.Message, "", new { @class = "error" })
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg mb-4">Submit</button>
                    <p class="form-footer-text">We'll get back to you in 1-2 business days.</p>
                </div>
            }
        </section>
    </div>
</main>