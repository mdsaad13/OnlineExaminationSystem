@model OnlineExaminationSystem.Models.Question
@{
    ViewBag.ExamsActive = "active";
}
<div class="page-header">
    <h3 class="page-title">
        <span class="page-title-icon bg-gradient-primary mr-2 text-white">
            <i class="mdi mdi-pen"></i>
        </span> View Exam - @ViewBag.Title
    </h3>
    <nav aria-label="breadcrumb" role="navigation">
        <ol class="breadcrumb bg-dark">
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Exams")">All Exams</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card card-outline-primary">
            <div class="card-body">
                <h3 class="card-title">@ViewBag.Title</h3>
                <form method="post" action="/Admin/@ViewBag.FormSubmit">

                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.ID)
                    @Html.HiddenFor(model => model.ExamID)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Title)
                        @Html.TextAreaFor(model => model.Title, new { @class = "form-control", @rows = "4" })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "error" })
                    </div>

                    <div class="form-group row">
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.Option1)
                            @Html.TextAreaFor(model => model.Option1, new { @class = "form-control", @rows = "4" })
                            @Html.ValidationMessageFor(model => model.Option1, "", new { @class = "error" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.Option2)
                            @Html.TextAreaFor(model => model.Option2, new { @class = "form-control", @rows = "4" })
                            @Html.ValidationMessageFor(model => model.Option2, "", new { @class = "error" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.Option3)
                            @Html.TextAreaFor(model => model.Option3, new { @class = "form-control", @rows = "4" })
                            @Html.ValidationMessageFor(model => model.Option3, "", new { @class = "error" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.Option4)
                            @Html.TextAreaFor(model => model.Option4, new { @class = "form-control", @rows = "4" })
                            @Html.ValidationMessageFor(model => model.Option4, "", new { @class = "error" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-3">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="Answer" id="Answer" value="1" @if (Model.Answer == 1) { @("checked") } /> Option 1
                                </label>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="Answer" id="Answer" value="2" @if (Model.Answer == 2) { @("checked") } /> Option 2
                                </label>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="Answer" id="Answer" value="3" @if (Model.Answer == 3) { @("checked") } /> Option 3
                                </label>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="Answer" id="Answer" value="4" @if (Model.Answer == 4) { @("checked") } /> Option 4
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Marks)
                        @Html.EditorFor(model => model.Marks, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Marks, "", new { @class = "error" })
                    </div>

                    <div class="text-center mt-5">
                        <a href="@Url.Action("ViewExam", "Admin", new { id = Model.ExamID })" class="btn btn-inverse-danger float-left">Cancel</a>
                        <button type="submit" class="btn btn-inverse-primary w-50">@ViewBag.Title</button>
                    </div>
                
                </form>
            </div>
        </div>
    </div>
</div>
