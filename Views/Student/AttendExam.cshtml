@model OnlineExaminationSystem.Models.ExamBundle
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@Model.Exam.Title - @AppInfo.SoftwareName</title>
    <link rel="stylesheet" href="/fonts/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        .main-content {
            min-height: 80vh;
            margin-top: 5rem;
        }

        .sticky-top {
            top: 6rem;
        }

        .footer {
            padding: 1rem;
            background: #f6f6f6;
        }

        .invalid-tooltip {
    left: 100%;
    margin-left: 0.8rem;
    width: 180px;
    max-width: unset;
    margin-top: 0;
        top: 0;
}
    </style>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="#">@AppInfo.SoftwareName</a>
        <div class="float-right text-white">
            <h3>Exam: @Model.Exam.Title</h3>
        </div>
    </nav>
    <div class="container-fluid main-content">
        <div class="row">
            <div class="col-3 ">
                <div class="sticky-top">
                    <table class="table table-striped text-break">
                        <tr>
                            <th>Title</th>
                            <td>@Model.Exam.Title</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>@Model.Exam.Description</td>
                        </tr>
                        <tr>
                            <th>Subject</th>
                            <td>@Model.Exam.SubjectName</td>
                        </tr>
                        <tr>
                            <th>Passing Marks</th>
                            <td>@Model.Exam.PassingMarks</td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="col-9">
                <div class="container">
                    <form action="" method="post" class="needs-validation" novalidate>
                        @{
                            int i = 1;
                            foreach (var item in Model.AllQuestion)
                            {
                                <div class="row">
                                    <div class="col-12 mb-1">
                                        <h4>@i. @item.Title</h4>
                                    </div>
                                    <div class="col-12">
                                        <div class="row">
                                            <div class="col-6">
                                                <div class="custom-control custom-radio custom-control-inline">
                                                    <input type="radio" id="@i-customRadioInline1" name="@item.ID" class="custom-control-input" value="1" required>
                                                    <label class="custom-control-label" for="@i-customRadioInline1">@item.Option1</label>
                                                    <div class="invalid-tooltip">
                                                        Kindly select an answer!
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="custom-control custom-radio custom-control-inline">
                                                    <input type="radio" id="@i-customRadioInline2" name="@item.ID" class="custom-control-input" value="2">
                                                    <label class="custom-control-label" for="@i-customRadioInline2">@item.Option2</label>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="custom-control custom-radio custom-control-inline">
                                                    <input type="radio" id="@i-customRadioInline3" name="@item.ID" class="custom-control-input" value="3">
                                                    <label class="custom-control-label" for="@i-customRadioInline3">@item.Option3</label>
                                                </div>

                                                <div class="invalid-feedback">
                                                    Kindly select answer.
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="custom-control custom-radio custom-control-inline">
                                                    <input type="radio" id="@i-customRadioInline4" name="@item.ID" class="custom-control-input" value="4">
                                                    <label class="custom-control-label" for="@i-customRadioInline4">@item.Option4</label>
                                                </div>
                                            </div>
                                        </div>
                                        <hr />
                                    </div>
                                </div>
                                i++;
                            }

                        }

                        <div class="alert alert-danger alert-dismissible fade show" role="alert" id="FeedBack" style="display:none">
                            <strong>Kindly attend all questions!</strong>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                        <div class="text-center mt-5 mb-5">
                            <button type="submit" class="btn btn-dark w-50">Submit</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>

    </div>

    <footer class="footer text-center">
        <div class="">
            <span class="text-muted">Copyright &copy; @DateTime.Now.Year <a href="#">@AppInfo.OwnerName</a>. All rights reserved.</span>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    <script>
        // Example starter JavaScript for disabling form submissions if there are invalid fields
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                var forms = document.getElementsByClassName('needs-validation');
                // Loop over them and prevent submission
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
</body>
</html>